{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run JUnit tests",
      "type": "shell",
      "group": { "kind": "build", "isDefault": true },
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\run-tests.ps1"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
